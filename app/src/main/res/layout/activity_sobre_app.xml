<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".SobreApp">

    <ImageView
        android:id="@+id/icone_sobreapp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo3"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toTopOf="@id/nomeapp_sobreapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeapp_sobreapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margem8dp"
        android:text="FNMM"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nome_ext_sobreapp"
        app:layout_constraintTop_toBottomOf="@id/icone_sobreapp" />
    <TextView
        android:id="@+id/nome_ext_sobreapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margem8dp"
        android:gravity="center"
        android:text="Formulário Nacional de Medicamentos\n de \nMoçambique"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/versao_sobreapp"
        app:layout_constraintTop_toBottomOf="@id/nomeapp_sobreapp" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/versao_sobreapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margem8dp"
        android:text="@string/versao_da_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/copyright_sobreapp"
        app:layout_constraintTop_toBottomOf="@id/nome_ext_sobreapp" />

    <TextView
        android:id="@+id/copyright_sobreapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margem8dp"
        android:text="c 2017-2021 WebDone"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detalhes_sobreapp"
        app:layout_constraintTop_toBottomOf="@id/versao_sobreapp" />

    <TextView
        android:id="@+id/detalhes_sobreapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margem16dp"
        android:text="DETALHES"
        android:textSize="18sp"
android:textColorLink="@color/white"

        android:textColor="@color/azulverde2"
        android:textStyle="bold"
        android:layout_marginBottom="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/copyright_sobreapp" />

</androidx.constraintlayout.widget.ConstraintLayout>