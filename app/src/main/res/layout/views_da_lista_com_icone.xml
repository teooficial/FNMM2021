<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/margem5dp"
    android:layout_marginTop="@dimen/margem5dp"
    android:id="@+id/constraint_com_icone"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icone_capitulo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/margem5dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/pharmaceutical_16x16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_nomecapitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margem16dp"
        android:fontFamily="@font/anton_regular"
        android:text="Aparelho Cardiovascular"
        app:layout_constraintStart_toEndOf="@id/icone_capitulo"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margem16dp"
        android:text="Aparelho Cardiovascular"
android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/icone_capitulo"
        app:layout_constraintTop_toBottomOf="@id/txt_nomecapitulo" />
    <View
        android:layout_width="match_parent"
        android:id="@+id/view"
        android:layout_marginLeft="@dimen/margem5dp"
        android:layout_marginRight="@dimen/margem5dp"
        android:layout_marginTop="@dimen/margem5dp"
        app:layout_constraintTop_toBottomOf="@id/txt_nomecapitulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#efefef"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>